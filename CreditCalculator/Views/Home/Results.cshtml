@{
    Layout = "_Layout";
}
@model List<PaymentResultModel>

<div>
    <div class="col-md-6">
        <table class="table-bordered">
            <tr>
                <th>Номер платежа</th>
                <th width="100%">Дата платежа</th>
                <th>Размер платежа по телу</th>
                <th>Размер платежа по %</th>
                <th>Остаток основного долга</th>
            </tr>
            @foreach (var a in Model)
            {
                <tr>
                    <td> @a.ID </td>
                    <td> @a.Date </td>
                    <td> @String.Format("{0:#,0.00}", a.Body) </td>
                    <td> @String.Format("{0:#,0.00}", a.Percent) </td>
                    <td> @String.Format("{0:#,0.00}", a.Balance) </td>
                </tr>
            }
        </table>
        <div style="margin-left: auto; margin-right: auto; text-align: center;">
            Итого переплат: @String.Format("{0:#,0.00}", TempData["totalOverpaid"]) руб.
        </div>
    </div>

    <style type="text/css">
        th {
            background: #BEBEBE;
        }
        tr {
            text-align : center;
        }
    </style>
</div>